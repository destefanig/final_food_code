-- for slot one you will need to insert wheat--
-- for slot two you will need to insert pork--
-- for slot 3 you will need to insert chicken--
-- for slot 4 you will need to insert eggs--
-- for slot 5 you will need to insert seeds--

# final_food_code
for 1 "minecraft:chicken" == "minecraft:wheat"
turtle.suck( 1 )
local function chicken()
 
turtle.drop()
if turtle.inspect() "minecraft:chicken"
turtle.suck()
turtle.select( 1 )
turtle.drop()
end

-- this function will pick up a peice of pork and give 6 peices of sugar cane in return--
local function pork()  
    turtle.inspect() == "minecraft:sugarcane"
    turtle.suck()
    for x = 1,6 do
     turtle.select( 2 )  
     turtle.drop()
    end
    
    pork()
    
   
   -- this function will drop up steak if the turtle detects chicken--
      local function steak()
      for y = 1, 2
      if turtle.inspect() == y == "minecraft:chicken"
      turtle.suck()
      turtle.select( 3 )
      turtle.drop()
      end
      
      steak()
      
     
     -- this function will drop and egg given that the turtle detects seeds--
          local function egg()
          for z = 1,2 do
          if turtle.inspect() == "minecraft:seeds"
          turtle.suck()
          turtle.select( 4 )
          turtle.drop()
          end
          
          egg()
          
         --this function will make the turtle drop wheat given that there is a seed in front of the turtle--
              local function wheat()
              for b = 1,1 do
              if turtle.inspect() == "minecraft:seed" then
              turtle.suck()
              turtle.select( 5 )
              turtle.drop()
              
              end
              
             
             wheat()
             
